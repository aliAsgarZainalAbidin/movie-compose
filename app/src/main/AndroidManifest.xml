<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movie_app_compose" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieAppCompose" >
        <activity
            android:name=".navigation.ParentNavigation"
            android:exported="true"
            android:label="@string/title_activity_parent_navigation"
            android:theme="@style/Theme.MovieAppCompose.NoActionBar" />
        <activity
            android:name=".ui.login.Login"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.MovieAppCompose.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.splash.SplashScreen"
            android:exported="true"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.MovieAppCompose.NoActionBar" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MovieAppCompose.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>